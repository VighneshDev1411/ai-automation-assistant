{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/storage/:path*",
      "destination": "https://lbokwzaegclteujkvlas.supabase.co/storage/v1/:path*"
    }
  ],
  "functions": {
    "app/api/workflows/execute/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/generate/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/execute-schedules/route.ts": {
      "maxDuration": 60
    }
  }
}

